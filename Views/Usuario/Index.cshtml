@model List<Proyecto.Models.UsuariosView>


<h2>Usuario</h2>

<p>
	<a asp-action="Create">Crear usuario</a>&nbsp;&nbsp;&nbsp;&nbsp;<a asp-action="Editar">Editar usuario</a>&nbsp;&nbsp;&nbsp;&nbsp;<a asp-action="Editar">Eliminar usuario</a>
</p>

<table class="table">
	<thead>
		<tr>
			<th>Nombre</th>
			<th>Apellido 1</th>
			<th>Apellido 2</th>
			<th>Rol</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var usuario in Model)
		{
			<tr>
				<td>@Html.DisplayFor(m=>usuario.Nombre)</td>
				<td>@Html.DisplayFor(m=>usuario.Apellido1)</td>
				<td>@Html.DisplayFor(m=>usuario.Apelllido2)</td>
				<td>@Html.DisplayFor(m=>usuario.Rol)</td>
			</tr>
		}
	</tbody>
</table>